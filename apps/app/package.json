{
  "name": "@syntopia/app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 5173",
  "test:fast:single": "VITEST_MAX_THREADS=1 VITEST_MIN_THREADS=1 vitest run --reporter=basic --exclude=src/routes/QuestDetail.flows.test.tsx --exclude=src/routes/ReviewQueue.enhanced.test.tsx --exclude=src/routes/Badges.test.tsx",
  "test:coverage:seq": "node scripts/run-test-per-file.mjs coverage",
  "test:coverage": "pnpm test:coverage:seq",
  "test:fast": "node scripts/run-test-per-file.mjs fast",
  "test:integration": "node scripts/run-test-per-file.mjs integration",
  "test:all": "pnpm test:fast && pnpm test:integration",
  "test": "pnpm test:all",
  "lint": "eslint --ext .ts,.tsx src",
  "format": "prettier --write .",
    "e2e": "playwright test",
    "e2e:install": "playwright install --with-deps"
  },
  "dependencies": {
    "@syntopia/types": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "react-force-graph-3d": "^1.24.4",
    "three": "^0.165.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.1",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "2.1.9",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-testing-library": "^6.2.2",
    "jsdom": "^25.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vitest": "^2.0.5",
    "@types/three": "^0.165.0"
  }
}
