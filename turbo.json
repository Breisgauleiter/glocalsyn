{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**", "build/**"], "inputs": ["src/**", "package.json", "tsconfig.json"] },
    "dev": { "cache": false },
    "lint": { "inputs": ["src/**", "package.json", "tsconfig.json"] },
    "test": { "dependsOn": ["build"], "outputs": ["coverage/**"], "inputs": ["src/**", "tests/**", "package.json", "tsconfig.json"] }
  }
}
